<div class="modal fade uploadsong_bd-example-modal"tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">

    <div class="modal-content" style="border-radius: 9px;">

      <div class="modal-header">

        <h2 style="margin-left: 10vh;">Upload Your Track</h2>


        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>

      </div>

      <div class="modal-body">
        <% @new_song = Song.new %>
        <%= simple_form_for @new_song do |f| %>
          <%= f.input :file, as: :file, label: 'Audio file'%>
          <%= f.input :cover_photo, as: :file, label: 'Artwork file' %>
          <%= f.input :title %>
          <%= f.input :album %>
          <%= f.input :artist %>

      <div id="create-song">
        <%= f.submit class: 'btn btn-danger btn-lg btn-block mt-4' %>
        <% end %>
      </div>

      </div>

      </div>
    </div>
</div>
