<div class="modal fade bd-example-modal"tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">

    <div class="modal-content" style="border-radius: 9px;">

      <div class="modal-header">

        <h2 class="text-center" style="margin-left: 20vh;">Log in</h2>


        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>

      </div>

      <div class="modal-body">

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <span> <%= link_to "Forgot your password?", new_password_path(resource_name) %> <br> </span>
          <span class="mb-3"> Haven't got an account yet? <%= link_to "Sign up", new_registration_path(resource_name) %></span>

          <div class="form-actions btn btn-secondary btn-lg btn-block mt-3" >
            <%= f.button :submit, "Log in" %>
          </div>
        <% end %>


      </div>

      </div>
    </div>
</div>


