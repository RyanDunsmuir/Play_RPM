<div class="modal fade download_bd-example-modal"tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">

    <div class="modal-content" style="border-radius: 9px;">

      <div class="modal-header">

        <h2 class="text-center" style="margin-left: 14vh;">Download links</h2>


        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>

      </div>

      <div class="modal-body">
        <div class="container download-links-container">

        <p class="instruction-download text-center" style="opacity: 0.6;"> <em>Right-click on the icons and choose "Save Link As" to download your chosen songs</em></p>

        <ul class="mt-5">
          <% @order.order_songs.each do |item| %>
          <li>
            <div class="download-links my-3">
              <% if item.song.title.length <= 25 %>
                <h3> <%= item.song.title %> </h3>
              <% else %>
                <h3> <%= item.song.title[0..25].rstrip %>... </h3>
              <% end %>

              <% key = item.song.file.key if item.song.file.present? %>
              <% url = "https://res.cloudinary.com/ryanthewizard/video/upload/#{key}.mp3" if item.song.file.present? %>

              <%= link_to url ||= "#" do %>
                <i class="download-icon fas fa-cloud-download-alt"></i>
              <% end %>

            </div>
          </li>
          <% end %>
        </ul>


        </div>
      <%= link_to order_path(@order), method: :patch, class: "btn btn-danger btn-lg btn-block mt-5" do %>
        I'm done! <i class="fas fa-check"></i>
      <% end %>

      </div>

      </div>
    </div>
</div>

