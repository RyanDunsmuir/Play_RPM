  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav-mobile mr-auto">
      <li>
        <% if user_signed_in? %>
          <%= link_to new_song_path, class: "nav-link-mobile mr-3" do %>
            <i class="fas fa-shopping-cart"></i> Cart
          <% end %>
        <% end %>
      </li>
      <li>
        <% if user_signed_in? %>
          <%= link_to  songs_path, class: "nav-link-mobile mr-3" do %>
            <i class="fas fa-user"></i> Profile
          <% end %>
        <% end %>
      </li>
      <li>
        <% if user_signed_in? %>
          <%= link_to  new_song_path, class: "nav-link-mobile mr-3" do %>
            <i class="fas fa-music"></i> Upload
          <% end %>
        <% end %>
      </li>
      <li>
        <% if user_signed_in? %>
          <%= link_to "Log out", destroy_user_session_path, method: 'delete', class: "nav-link-mobile mr-3" %>
        <% else %>
          <%= link_to "Login", new_user_session_path, class: "nav-link-mobile mr-3" %>
        <% end %>
      </li>


    </ul>
  </div>
</div>

