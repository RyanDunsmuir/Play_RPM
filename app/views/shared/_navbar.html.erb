<div class="navbar sticky-top navbar-light navbar-lewagon mobile-nav">
  <div class='left_icon_text d-flex'>
        <%= link_to songs_path, id: "left-logo", class: "navbar-brand nav-link" do %>
          <%= image_tag "logo_playrpm.png" %>
        <% end %>
  </div>


  <% if user_signed_in? %>
    <%= link_to songs_path do %>
    <%= image_tag "text_playrpm.png", id: "center-logo", class: "navbar-brand text_logo px-3" %>
    <% end %>
  <% else %>
    <%= link_to root_path do %>
