  <div class="container">

    <h1 class="pt-5 text-center">Your Order</h1>
    <p class="text-center" style="opacity: 0.6;"><em>ID#<%= @order.id %></em></p>

    <div class="order-item-cards">

      <ul>
        <% @order.order_songs.each do |item| %>
          <li>
              <div class="order-item-card">
                <%= render_cart_photo(item.song) %>
                <h2><%= item.song.title %></h2>
                <p> <%= item.song.album %> </p>
                <p> <%= item.song.artist %> </p>
                <div class="cart-item-buttons">
                  <%= link_to song_path(item.song), class: "eye-icon" do %>
                    <i class="fas fa-eye"></i>
                  <% end %>
                  <%= link_to order_song_path(item), method: :delete, class: "trash-icon" do %>
                    <i class="fas fa-trash-alt"></i>
                  <% end %>
                </div>
              </div>
          </li>
        <% end %>
      </ul>

    </div>

    <div class="">
      <%= link_to 'Back to Songs', songs_path, class: "m-4 btn btn-secondary"  %>
      <%= link_to "", data: {toggle: "modal", target: ".download_bd-example-modal"}, class: "btn btn-danger" do %>
        Checkout <i class="fas fa-cart-arrow-down"></i>
      <% end %>
    </div>

  </div>
</div>

<%= render 'shared/download' %>
