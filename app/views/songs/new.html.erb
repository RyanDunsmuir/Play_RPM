<div class="container">
  <div class="card p-4 m-5 ">
    <h1>Upload A Song</h1>

    <%= simple_form_for @song do |f| %>
    <%= f.input :file, as: :file %>
    <%= f.input :title %>
    <%= f.input :album %>
    <%= f.input :artist %>
    
    <div id="create-song">
      <%= f.submit class: 'btn btn-danger createsongbtn btn-block m-1' %>
      <% end %>
    </div>

    <div id="cancel">  
      <%= link_to 'Cancel', songs_path, class: "btn btn-secondary btn-block m-1" %>
    </div>  
</div>
