<div class="container">

  <div class="song-container m-5">
    <h1 class="m-3"><strong><%= @song.title %></strong></h1>
    <h2>Album: <%= @song.album %> </h2>
    <h2>Artist: <%= @song.artist %></h2>
    <h4 class="m-4"> <em>A track from  <%= @song.user.username.present? ? @song.user.username : 'Anonymous' %> </em></h4>
    <div class="m-3">
    <%= render_audio(@song) %>
    </div>
    <div class="button-box">
      <%= link_to 'Back', songs_path, class: "btn btn-secondary" %>
      <%= link_to 'Add To Cart', order_songs_path(song_id: @song), method: :post, class: "btn btn-success"  %>
      <%= link_to 'Delete', song_path(@song), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to delete this masterpiece?"} if current_user == @song.user %>
      <%= link_to 'Edit', edit_song_path(@song), class: "btn btn-primary" if current_user == @song.user %>
    </div>
    <div class="album-cover mt-4">
      <%= render_photo(@song) %>
    </div>
  </div>

</div>
