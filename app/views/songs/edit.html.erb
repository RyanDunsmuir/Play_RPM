<div class="container col-sm-6 col-md-6 col-lg-6 col-xl-6">
  <div class="card p-4 m-5 ">
    <h1 class="text-center">Edit Song</h1>

    <%= simple_form_for @song do |f| %>

    <%= f.input :file, as: :file, label: 'Audio file'%>
    <%= f.input :cover_photo, as: :file, label: 'Artwork file' %>
    <%= f.input :title %>
    <%= f.input :album %>
    <%= f.input :artist %>
    
    <div id="create-song">
      <%= f.submit class: 'btn btn-danger createsongbtn btn-block m-1' %>
      <% end %>
    </div>

    <div id="cancel">  
      <%= link_to 'Cancel', song_path(@song), class: "btn btn-secondary btn-block m-1" %>
    </div>  
  </div>
</div>
