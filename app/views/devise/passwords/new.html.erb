<div class='container col-sm-6 col-md-6 col-lg-6 col-xl-6'>
  <div class="card p-4 m-5">
    <h2 class="text-center">Forgot your password?</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
      </div>

      <div class="form-actions btn btn-secondary btn-lg btn-block">
        <%= f.button :submit, "Reset password" %>
      </div>
      <div class="cancel-login">
        <%= link_to 'Cancel', root_path, class: "btn btn-secondary btn-lg btn-block m-0" %>
      </div>
    <% end %>
    <div class="signup-link">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
